{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@juggling-hub/shared/domain/event/data": ["libs/shared/domain/event/data/src/index.ts"],
      "@juggling-hub/frontend/primitives": ["libs/frontend/primitives/src/index.ts"],
      "@juggling-hub/frontend/utils": ["libs/frontend/utils/src/index.ts"],
      "@juggling-hub/frontend/view-model": ["libs/frontend/view-model/src/index.ts"],
      "@juggling-hub/libs-backend-domain-event": ["libs/backend/domain-modules/event/src/index.ts"],
      "@juggling-hub/libs-shared-event-dto": ["libs/shared/domain-modules/event/dto/src/index.ts"]
    }
  },
  "files": ["global.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
